<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/styles.css" />
  </head>

  <body>
    <div id="main">
      <div id="app">
        <h1><%= title %></h1>
        <div id="users">
          <% characters.forEach((character, idx) => { %>
            <div class="user-info"
              id="<%= idx+1 %>"
            >
              <h2>
                <%= user.name %>
              </h2>
              <br>
              <h4>
                Species: <%= user.species %>
              </h4>
              <br>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
  </body>
</html>